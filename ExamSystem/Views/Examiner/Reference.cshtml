        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0" style="color: rgb(31,108,163);"><span class="fa fa-chalkboard-teacher"></span> Reference</h1>
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">Reference</li>
                            </ol>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="card card-info">
                        <div class="card-body">
                            <a class="btn btn-sm bg1" href="#" data-toggle="modal" data-target="#add">
                                <i class="fa fa-user-plus"></i> Add Reference
                            </a><br><br>
                            <div class="col-md-12 table-responsive">
                                <table id="example1" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Reference Version</th>
                                            @* <th>Reference File</th> *@
                                            <th>Reference Name</th>
                                            <th>Subject</th>
                                            <th>Added date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                                    @{
                                                        foreach (var doc in ViewBag.Docs) {
                                                <tr>
                                                    <td>@doc.DocVersion</td>
                                                    @* <td><img src="@doc.DocPath" width="40" style="border-radius:10px" alt="Doc Image"></td>*@
                                                    <td>@doc.DocName</td>
                                                    <td>@doc.Subject.SubjectName</td>
                                                    <td>@doc.DateAdded</td>
                                                    <td class="text-right">
                                                        @* <a class="btn btn-sm bg3" href="/Examiner/EditReference?id=@doc.DocId" data-toggle="modal" data-target="#add"><i class="fa fa-edit"></i> edit</a> *@
                                                        <a class="btn btn-sm bg1" href="/Examiner/DeleteDoc?id=@doc.DocId" >
                                                            <i class="fa fa-trash-alt"></i> delete
                                                        </a>
                                                    </td>
                                                </tr>
                                                        }
                                                    }
                                       
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

        </div>
        <!-- /.card-body -->
    </div>
    </div>
    <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    </div>
    <!-- ./wrapper -->
    <div id="add" class="modal animated rubberBand delete-modal" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <form asp-controller="Examiner" asp-action="Reference" enctype="multipart/form-data"
                          method="post">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 float-left">
                                    <div class="float-left">
                                        <span class="nav-icon fa fa-book"> Reference Information</span>
                                    </div>
                                </div>
                                <br><br><br>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1" class="float-left" asp-for="DocVersion">Reference Version</label>
                                        <input type="number" min="1" max="10 " asp-for="DocVersion" class="form-control" placeholder="1">
                                        <span asp-validation-for="DocVersion" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1" class="float-left" asp-for="DocName">Reference Name</label>
                                            <input type="text" class="form-control" placeholder="ex. MVC architecture " asp-for="DocName">
                                            <span asp-validation-for="DocName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    @* asp-for="SubjectId"
                                    asp-validation-for="SubjectId"
                                    *@
                                    <div class="form-group">
                                        <label class="float-left">Subject</label>
                                        <div class="select-wrapper">
                                            <select asp-for="Subject" asp-validation-for="Subject" name="Subject" class="custom-select version">
                                                <option value="Version" hidden selected>Subject</option>
                                                @foreach (var Doc in ViewBag.Subjects)
                                                {
                                                    <option value=@Doc>@Doc</option>
                                                }

                                            </select>
                                            <!-- <i class="fas fa-caret-down select-icon"></i> -->
                                        </div>
                                        <span class="text-danger"></span>
                                    </div>

                                </div>
                                @*date *@
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1" class="float-left" asp-for="DateAdded">Reference Added Date</label>
                                        <input type="date" value="2024-02-12"  disabled class="form-control" asp-for="DateAdded">
                                        <span asp-validation-for="DateAdded" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1" class="float-left" asp-for="DocPath">Reference File</label>
                                        <input type="file" class="form-control" asp-for="DocPath">
                                        <span asp-validation-for="DocPath" class="text-danger"></span>
                                    </div>
                                </div>


                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button type="submit" value="Create" class="btn bg2">Save</button>
                                    <button type="submit" class="btn bg1">Cancel</button>
                                </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
